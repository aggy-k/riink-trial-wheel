
/* 转盘 */
.canvas-container ul,
.canvas-container li{
  margin: 0 ;
  padding: 0;
  list-style: none;
}

.canvas-container {
  display: flex;
  flex-direction: col;
  align-items: center;
  justify-content: center;
  margin: 0 auto;
  width: 320px;
  height: 320px;
  margin-top: 10px;
  position: relative;
}

.canvas-content{
  position: absolute;
  left: 10;
  top: 10;
  z-index: 10;
  display: block;
  width: 300px;
  height: 300px;
  border-radius: inherit;
}

.canvas-stand{
  position: absolute;
  left: 0;
  top: 0;
  z-index: 10;
  display: block;
  width: 320px;
  border-radius: inherit;
  background-clip: padding-box;
}

.canvas-element{
  position: relative;
  z-index: 1;
  width: inherit;
  height: inherit;
  border-radius: 50%;
}
.canvas-list{
  position: absolute;
  left: 0;
  top: 0;
  width: inherit;
  height: inherit;
  z-index: 9999;
}
.canvas-item{
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
}
.canvas-item-text{
  position: relative;
  display: block;
  padding-top: 20px;
  /* width: 50px; */
  margin: 0 auto;
  text-align: center; 
  -webkit-transform-origin: 50% 150px; 
  transform-origin: 50% 150px;
}

.canvas-item-img {
  width: 35px;
  height: 35px;
}

/* 分隔线 */
.canvas-line{
  position: absolute;
  left: 0;
  top: 0;
  width: inherit;
  height: inherit;
  z-index: 99;
}
.canvas-litem{
  position: absolute;
   left: 150px;
   top: 0;
   width: 1px;
   height: 150px;
   background-color: rgba(228,55,14,.4);
   overflow: hidden; 
   -webkit-transform-origin: 50% 150px; 
   transform-origin: 50% 150px;
}

.canvas-btn{
  position: absolute;
  left: 120px;
  top: 120px;
  z-index: 400;
  border-radius: 50%;
  color: #F4E9CC;
  line-height: 80px;
  text-align: center;
  font-size: 20px;
}
